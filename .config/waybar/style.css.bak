
* {
	/* font-family: JetBrains Mono Nerd Font; */
	font-family: JetBrains Mono Nerd Font;
	font-size: 16px;
  font-weight: 700;
}

/* ------------------------------------------------ */

window#waybar {
	background-color: rgba(26,27,38, 0.0);
}

/* ------------------------------------------------ */

#workspaces button {
 	background-color: rgba(255,255,255, 0.07);
	border-radius: 10px;
	color: #bcbcbc;	
	margin: 5px;
	border: 2px solid rgba(200,200,200,0.0);
	padding: 4px 18px 2px 18px;
 	font-size: 16px;
	box-shadow: 2px 2px 2px rgba(0,0,0,0.3);
	min-height: 25px;	
}

/* ------------------------------------------------ */

#workspaces button.active {
	border: 2px solid rgba(200,200,200,1.0);
}

